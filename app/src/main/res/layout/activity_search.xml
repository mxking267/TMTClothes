<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="View.SearchActivity"
    android:padding="10dp"
    android:background="@color/dark_primary"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp">
        <Button
            android:layout_gravity="left|center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/arrow_left_335_svgrepo_com"
            android:backgroundTint="@color/gray_primary"
            />



        <EditText
            android:layout_gravity="center"
            android:id="@+id/home_search_input"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.95"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/gray_secondary"
            android:drawableRight="@drawable/baseline_search_24"
            android:drawableTint="@color/gray_primary"
            android:hint="Search"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="@color/gray_primary" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gần đây"
        android:textColor="@color/gray_primary"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watch 5"
        android:textColor="@color/gray_primary"
        android:drawableLeft="@drawable/clock_svgrepo_com"
        android:drawableTint="@color/gray_primary"
        android:drawablePadding="8dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fold 4"
        android:textColor="@color/gray_primary"
        android:drawableLeft="@drawable/clock_svgrepo_com"
        android:drawableTint="@color/gray_primary"
        android:drawablePadding="8dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 mini"
        android:textColor="@color/gray_primary"
        android:drawableLeft="@drawable/clock_svgrepo_com"
        android:drawableTint="@color/gray_primary"
        android:drawablePadding="8dp"
        android:gravity="center"/>




</LinearLayout>