<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.MainActivity"

    >

    <!--Title Bar -->
    <RelativeLayout app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/action_bar_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp"
        android:padding="5dp"
        >

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TMT"
            android:textColor="@color/blue"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAllCaps="false" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/action_bar_cart"
            android:id="@+id/action_bar_bell"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_bell_foreground" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/action_bar_cart"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical|end"
            android:src="@mipmap/ic_cart_foreground"


            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:menu="@menu/bottom_menu"
        app:itemTextColor="@color/blue"
        app:itemIconTint="@color/blue"
        android:background="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>