<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_primary"
    android:padding="30dp"
    tools:context="Fragments.OrderFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:weightSum="10"
        app:layout_constraintBottom_toTopOf="@id/product_1"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/content"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/back"
            android:layout_weight="9"
            android:text="Order"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>
    <!--begin san pham thu nhat-->
    <LinearLayout

        android:id="@+id/product_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/product_2"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintVertical_bias="0.225">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ao_khoac" />

        <LinearLayout

            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:text="Ao Thun"
                android:textAlignment="center"
                android:textSize="60px"
                android:textColor="@color/gray_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:text="size:36-color:Brown"
                android:textAlignment="viewStart"
                android:textColor="@color/gray_primary"

                android:textSize="28px"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:text="$:55"
                android:textColor="@color/gray_primary"

                android:textSize="32px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/minus_btn"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/text"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:textColor="@color/gray_primary"
                android:text="1"
                android:textAlignment="center" />

            <Button

                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <!--end san pham thu nhat-->
    <!--      begin  san pham thu hai-->

    <LinearLayout
        android:id="@+id/product_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/product_3"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_1"
        app:layout_constraintVertical_bias="0.225">


        <ImageView

            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ao_khoac" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/gray_primary"
                android:layout_height="80px"
                android:text="Ao Thun"
                android:textAlignment="center"
                android:textSize="60px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:textColor="@color/gray_primary"
                android:text="size:36-color:Brown"
                android:textAlignment="viewStart"
                android:textSize="28px"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:textColor="@color/gray_primary"
                android:text="$:55"
                android:textSize="32px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/minus_btn2"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/text2"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:textColor="@color/gray_primary"
                android:text="1"
                android:textAlignment="center" />

            <Button

                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>
    </LinearLayout>
    <!--       end san pham thu hai -->


    <!--        begin san pham thu ba-->
    <LinearLayout
        android:id="@+id/product_3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_2"
        app:layout_constraintVertical_bias="0.225">


        <ImageView

            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/ao_khoac" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:textColor="@color/gray_primary"
                android:text="Ao Thun"
                android:textAlignment="center"
                android:textSize="60px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:textColor="@color/gray_primary"
                android:text="size:36-color:Brown"
                android:textAlignment="viewStart"
                android:textSize="28px"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:textColor="@color/gray_primary"
                android:text="$:55"
                android:textSize="32px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/minus_btn3"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/text3"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="1"
                android:textColor="@color/gray_primary"
                android:textAlignment="center" />

            <Button
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:background="@color/transparent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <!--        end san pham thu ba-->


    <!--    bottom nav-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="50dp"
                android:textColor="@color/gray_primary"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Thanh tien:" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/gray_primary"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="55555$"
                android:textAlignment="viewEnd"
                 />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/gray_primary"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Phi ship"/>
            <TextView
                android:text="55555$"
                android:textAlignment="viewEnd"
                android:layout_width="50dp"
                android:textColor="@color/gray_primary"
                android:layout_height="match_parent"
                android:layout_weight="1"></TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:textColor="@color/gray_primary"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Tong cong"/>
            <TextView
                android:text="55555$"
                android:textAlignment="viewEnd"
                android:textColor="@color/gray_primary"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></TextView>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mua"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


