<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="Fragments.OrderFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titlePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/backitem" />

        <TextView
            android:id="@+id/title"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/share_btn"
            android:layout_toRightOf="@+id/back"
            android:text="Detail product"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/shop_btn"
            android:src="@drawable/undo" />

        <ImageView
            android:id="@+id/shop_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/shop" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/ao_khoac"
        app:layout_constraintBottom_toTopOf="@id/address"
        app:layout_constraintTop_toBottomOf="@id/titlePage" />

    <RelativeLayout
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/image">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Vui long nhap dia chi:"
            android:textAlignment="viewStart"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/address_editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/soLuong"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/buy_btn"
        app:layout_constraintTop_toBottomOf="@id/address">

        <Button
            android:id="@+id/dauTru"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:backgroundTint="@color/white"
            android:text="-"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/soLuongMua"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/dauTru"
            android:text="1"
            android:textAlignment="center" />

        <Button
            android:id="@+id/dauCong"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/soLuongMua"
            android:backgroundTint="@color/white"
            android:text="+"
            android:textColor="@color/black" />
    </RelativeLayout>

    <Button
        android:id="@+id/buy_btn"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="buy"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/soLuong"
        app:layout_constraintVertical_bias="0"

        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>